{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": false,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "paths": {
      "@share/*": ["src/share/*"],
      "@util/*": ["src/util/*"],
      "@users/*": ["src/users/*"],
      "@types/*": ["src/types/*"],
      "@logger/*": ["src/logger/*"],
      "@database/*": ["src/database/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@auth/*": ["src/auth/*"],
      "@user-secrets/*": ["src/users/user-secrets/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/[x]*"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
